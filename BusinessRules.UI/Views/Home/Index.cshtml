@using BusinessRules.Domain.Common;
@using Microsoft.Extensions.Options;
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Environment
@inject IOptions<AppSettings> parsedConfig;

@{
    var config = parsedConfig.Value;
}

<link href="~/css/index.css" rel="stylesheet" />

<div class="demo-link">
    <div class="row">
        <div class="col-sm-auto pl-5 pl-sm-0">
            <a class="btn btn-primary"
               asp-area=""
               asp-controller="Home"
               asp-action="TryItOut">
                Live Demo
            </a>
        </div>
        <div class="col-sm-auto pl-5 pl-sm-0 mt-2 mt-sm-0">
            <a class="btn btn-primary"
               asp-area=""
               asp-controller="Home"
               asp-action="TryItOut"
               onclick="sessionStorage.setItem('mbrWelcomeShown','1'); sessionStorage.setItem('lastTab', 'documentation-info-tab');">
                Documentation
            </a>
        </div>
        <div class="col-sm-auto pl-5 pl-sm-0 mt-2 mt-sm-0">
            <a class="btn btn-primary"
               asp-area=""
               asp-controller="Home"
               asp-action="TryItOut"
               onclick="sessionStorage.setItem('mbrWelcomeShown','1'); sessionStorage.setItem('lastTab', 'pricing-info-tab');">
                Pricing
            </a>
        </div>
    </div>



</div>

<div class="auth-links">
    <div class="row">
        @if (!Environment.IsDevelopment())
        {
            <div class="col-sm-auto pr-5 pr-sm-0">
                <a class="float-right" asp-controller="Account" asp-action="Login">Log In</a>
            </div>
        }        
        <div class="col-sm-auto pr-5 pr-sm-0 mt-2 mt-sm-0">
            <a class="btn btn-primary float-right" onclick="document.getElementById('signUpModalButton').click();">Sign Up For Free</a>
        </div>
    </div>
</div>

<!-- Hero section -->
<div class="hero">
    <div class="container">
        <div class="row">
            <div class="col-sm-auto">
                <img src="~/images/logo.png" alt="BizBot" title="BizBot" width="100" height="100" />
            </div>
            <div class="col-sm">
                <h1>My Business Rules!</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-2"></div>
            <div class="col-auto">
                <h3>Empowering business users to manage their own rules</h3>
            </div>
        </div>
    </div>
</div>

<!-- What is this and why do I need it? section -->
<div class="what-and-why">
    <h2 class="text-center p-0 m-0">What is My Business Rules?</h2>
    <div class="row m-2">
        <div class="col">
            <div class="row text-center">
                <h5>Quick Introduction</h5>
            </div>
            <div class="row">
                <iframe width="560" height="315" src="https://www.youtube.com/embed/videoseries?list=PLzQLgxI2tbWkNTTRANBXy1Wu7ytBdASmo" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            </div>
        </div>
        <div class="col">
            <div class="row text-center">
                <h5>How Fast Can You Get Set Up?</h5>
            </div>
            <div class="row">
                <iframe width="560" height="315" src="https://www.youtube.com/embed/videoseries?list=PLzQLgxI2tbWmyzrZ5IjcN29TzXOInT6h0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>

<!-- Features section -->
<div class="features">
    <div class="container">
        <h2 class="text-center">Features</h2>
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <img src="~/images/easy.png" alt="" class="card-img-top">
                    <div class="card-body">
                        <h3 class="card-title">Easy to use</h3>
                        <p class="card-text">Our application has a user-friendly interface that allows you to create and edit business rules with ease.</p>
                        <br />
                    </div>
                </div>
            </div>
            <hr class="d-block d-sm-none" />
            <div class="col-md-3">
                <div class="card">
                    <img src="~/images/flexible.png" alt="" class="card-img-top">
                    <div class="card-body">
                        <h3 class="card-title">Powerful and flexible</h3>
                        <p class="card-text">Our application supports a variety of rule types and conditions, so you can handle any business scenario.</p>
                        <br />
                    </div>
                </div>
            </div>
            <hr class="d-block d-sm-none" />
            <div class="col-md-3">
                <div class="card">
                    <img src="~/images/integration.jpg" alt="" class="card-img-top">
                    <div class="card-body">
                        <h3 class="card-title">Seamless and compatible</h3>
                        <p class="card-text">Our application integrates smoothly with your existing systems, giving you new possibilities and features with your current apps.</p>
                    </div>
                </div>
            </div>
            <hr class="d-block d-sm-none" />
            <div class="col-md-3">
                <div class="card">
                    <img src="~/images/deployment.png" alt="" class="card-img-top">
                    <div class="card-body">
                        <h3 class="card-title">Cloud or On-Premises</h3>
                        <p class="card-text">With any subscription, get instant access to an on-premises version of My Business Rules.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to action section -->
<div class="cta">
    <div class="container">
        <h2 class="text-center">Ready to get started?</h2>
        <p>Do you want to empower your business users to create and manage their own rules without depending on developers? My Business Rules! is the solution you need. Our application lets you define your business rules in a simple and intuitive way, using natural language and graphical interfaces. You can also test and validate your rules before enabling them in your production environment.</p>
        <p>My Business Rules! is ideal for businesses that operate in industries where rules are constantly changing, such as insurance or finance. You can easily adapt your rules to new regulations, market conditions, or customer preferences, without waiting for developers to code them for you. Developers, on the other hand, can focus on building and maintaining your core systems, while integrating seamlessly with our API to apply your rules consistently across your applications.</p>
        <div class="text-center mt-5">
            <a class="btn btn-primary"
               asp-area=""
               asp-controller="Home"
               asp-action="TryItOut">
                Try it out for yourself!
            </a>
        </div>
    </div>
</div>
